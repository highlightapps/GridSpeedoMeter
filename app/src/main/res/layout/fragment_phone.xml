<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="8dp"
                android:text="Accura RDX"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/batteryImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txtBluetooth"
                android:src="@drawable/ic_battery_full_black_24dp" />

            <ImageView
                android:id="@+id/signalImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/batteryImageView"
                android:src="@drawable/ic_signal_cellular_3_bar_black_24dp" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txtMenu"
                android:background="@color/ash" />


            <TextView
                android:id="@+id/txtMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_menu_black_24dp"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/headerSection"
            android:background="@color/ash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:background="#40000000">

            <Button
                android:id="@+id/btnRecents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_access_recent_black_24dp"
                android:text="Recents"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <Button
                android:id="@+id/btnContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_contacts_black_24dp"
                android:text="Contacts"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <Button
                android:id="@+id/btnNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_dialpad_black_24dp"
                android:text="Enter Number"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
            android:text="Add Favourite"
            android:drawablePadding="5dp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</FrameLayout>